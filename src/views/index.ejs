<%- include('includes/head')%>
<%- include('includes/nav')%>
 

<section class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <h1 class="text-center agenda">Agenda</h1>
            <p class="text-center lead">Contatos abaixo</p>


            <%- include('includes/messages') %>
        </div>

        <% if(contatos.length > 0) {%>
            <div class="responsive-table">
                <table class="tables">
                    <% contatos.forEach(contato => { %>
                        <tr>
                            <td><%= contato.nome %></td>
                            <td><%= contato.sobrenome %></td>
                            <td><%= contato.telefone %></td>
                            <td><%= contato.email %></td>
                            <td><a href="/contato/index/<%= contato._id %>">Editar</a></td>
                            <td><a href="/contato/delete/<%= contato._id %>">Excluir</a></td>
                        </tr>
                    <% }) %>
                </table>
            </div>

        <% } else {%>
            <p class="text-center lead">NÃ£o existem contatos na sua agenda</p>
        <% } %>  

        <div class="col-lg-2"></div>
    </div>
</section>

<%- include('includes/footer')%>

